<%= "<%=" %> link to: <%= singular %>_path(@conn, :edit, @<%= singular %>), class: "btn btn-primary header-action" do <%= "%\>" %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit <%= template_singular %>
<%= "<% end %\>" %>

<dl class="dl-horizontal">
<%= for {k, _} <- attrs do %>
  <dt><%= Phoenix.Naming.humanize(Atom.to_string(k)) %></dt>
  <dd><%= "<%=" %> @<%= singular %>.<%= k %> <%= "%\>" %></dd>
<% end %>
</dl>
