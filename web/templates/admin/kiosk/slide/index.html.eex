<table class="table">
  <thead>
    <tr>
      <th>Slide ID</th>
      <th>Slide Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for slide <- @slides do %>
    <tr>
      <td><%= link "#{slide.id}", to: admin_kiosk_slide_path(@conn, :show, @kiosk, slide) %></td>
      <td><%= link slide.name, to: admin_kiosk_slide_path(@conn, :show, @kiosk, slide) %></td>

      <td class="text-right">
        <div class="dropdown actions">
          <button class="btn btn-xs btn-default dropdown-toggle" type="button" data-toggle="dropdown">
            Actions <span class="caret"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right">
            <li>
              <%= link "Show", to: admin_kiosk_slide_path(@conn, :show, @kiosk, slide), class: "show" %>
            </li>
            <li>
              <%= link "Edit", to: admin_kiosk_slide_path(@conn, :edit, @kiosk, slide), class: "edit" %>
            </li>
            <li>
              <%= link "Delete", to: admin_kiosk_slide_path(@conn, :delete, @kiosk, slide), method: :delete, data: [confirm: "Are you sure?"], class: "delete" %>
            </li>
          </ul>
        </div>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
