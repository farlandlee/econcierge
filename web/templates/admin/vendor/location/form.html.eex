<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, "Location Name", class: "control-label" %>
    <%= text_input f, :name, class: "form-control", placeholder: "(Wilson Office, Jackson Storefront...)" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :address1, "Address", class: "control-label" %>
    <%= text_input f, :address1, class: "form-control" %>
    <%= error_tag f, :address1 %>
  </div>

  <div class="form-group">
    <%= label f, :address2, "Address 2", class: "control-label" %>
    <%= text_input f, :address2, class: "form-control" %>
    <%= error_tag f, :address2 %>
  </div>

  <div class="form-group">
    <%= label f, :city, class: "control-label" %>
    <%= text_input f, :city, class: "form-control" %>
    <%= error_tag f, :city %>
  </div>

  <div class="form-group">
    <%= label f, :state, class: "control-label" %>
    <%= select f, :state, state_options, class: "form-control chosen-select", default: "WY" %>
    <%= error_tag f, :state %>
  </div>

  <div class="form-group">
    <%= label f, :zip, class: "control-label" %>
    <%= text_input f, :zip, class: "form-control" %>
    <%= error_tag f, :zip %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
