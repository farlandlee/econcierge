<%= link to: admin_vendor_image_path(@conn, :edit, @vendor, @image), class: "btn-sm btn-primary header-action" do %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
<% end %>

<dl class="dl-horizontal">
    <dt>Caption</dt>
    <dd><%= caption @image %></dd>

    <dt>Original</dt>
    <dd><%= tag :img, src: @image.original, class: "img-responsive" %></dd>

    <dt>Medium</dt>
    <dd><%= tag :img, src: @image.medium, class: "img-responsive" %></dd>
</dl>
