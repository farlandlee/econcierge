<table class="table">
  <thead>
    <tr>
      <th>Filename</th>
      <th>Caption</th>
      <th>Default Image?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <%= for image <- @images do %>
    <tr>
      <td><%= link image.filename, to: admin_vendor_image_path(@conn, :show, @vendor, image) %></td>
      <td><%= caption image %> </td>
      <td>
        <%= Grid.AdminView.default_switcher @vendor.default_image_id, image.id,
        admin_vendor_image_path(@conn, :set_default, @vendor, image) %>
      </td>

      <td class="text-right">
        <div class="dropdown actions">
          <button class="btn btn-xs btn-default dropdown-toggle" type="button" data-toggle="dropdown">
            Actions <span class="caret"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right">
            <li>
              <%= link "Edit", to: admin_vendor_image_path(@conn, :edit, @vendor, image), class: "edit" %>
            </li>
            <li>
              <%= link "Delete", to: admin_vendor_image_path(@conn, :delete, @vendor, image), method: :delete, data: [confirm: "Are you sure?"], class: "delete" %>
            </li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
