<h2><%= @vendor.name %> Images</h2>

<table class="table">
  <thead>
    <tr>
      <th>Filename</th>
      <th>Image</th>
      <th>Caption</th>
      <th>Default Image?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for image <- @vendor.images do %>
    <tr>
      <td><%= image.filename %></td>
      <td><%= tag :img, src: image.medium, class: "img-responsive" %></td>
      <td><%= caption image %> </td>
      <td>
      <%= if image.id == @vendor.default_image_id do %>
        <em>Current default</em>
      <% else %>
        <%= link "Set as Default", to: admin_vendor_image_path(@conn, :set_default, @vendor.id, image.id), method: :put, class: "btn btn-primary" %>
      <% end %>
      </td>
      <td class="text-right">
        <%= link "Show", to: admin_vendor_image_path(@conn, :show, @vendor.id, image.id), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: admin_vendor_image_path(@conn, :edit, @vendor.id, image.id), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: admin_vendor_image_path(@conn, :delete, @vendor.id, image.id), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "Add image", to: admin_vendor_image_path(@conn, :new, @vendor.id) %>
<%= link "Back to #{@vendor.name}", to: admin_vendor_path(@conn, :show, @vendor.id), class: "pull-right" %>
