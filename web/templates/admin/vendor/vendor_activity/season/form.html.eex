<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>
  
  <div class="form-group">
    <label class="control-label">Start Date
      <%= season_date_select f, :start_date %>
    </label>
    <%= error_tag f, :start_date_month %>
    <%= error_tag f, :start_date_day %>
  </div>

  <div class="form-group">
    <label class="control-label">End Date
      <%= season_date_select f, :end_date %>
    </label>
    <%= error_tag f, :end_date_month %>
    <%= error_tag f, :end_date_day %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
    <%= link "Cancel", to: @back, class: "btn btn-default" %>
  </div>
<% end %>
