<ul>
  <li>
    <strong>Name:</strong>
    <%= @vendor.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @vendor.description %>
  </li>

  <li>
    <strong>Activities</strong>
    <%= pretty_activities(@vendor.activities) %>
  </li>

  <li>
    <strong>Default Image</strong>
    <%= if @vendor.default_image do %>
    <%= vendor_img @vendor, class: "img-responsive" %>
    <% else %>
    <%= link "Choose a default image in the Gallery", to: admin_vendor_image_path(@conn, :index, @vendor.id), class: "text-italic" %>
    <% end %>
  </li>


</ul>
<%= link "Edit", to: admin_vendor_path(@conn, :edit, @vendor) %>
<%= link "Back", to: admin_vendor_path(@conn, :index) %>

<%= link "Image Gallery", to: admin_vendor_image_path(@conn, :index, @vendor.id), class: "pull-right" %>
