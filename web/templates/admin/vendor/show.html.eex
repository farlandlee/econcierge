<%= link "Â« Back to Vendors", to: admin_vendor_path(@conn, :index) %>

<%= link to: admin_vendor_path(@conn, :edit, @vendor.id), class: "btn-sm btn-primary new-button" do %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit Vendor
<% end %>

<ul>
  <li>
    <strong>Name:</strong>
    <%= @vendor.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @vendor.description %>
  </li>

  <li>
    <strong>Activities</strong>
    <%= pretty_activities(@vendor.activities) %>
  </li>

  <li>
    <strong>Default Image</strong>
    <%= if @vendor.default_image do %>
    <%= vendor_img @vendor, class: "img-responsive" %>
    <% else %>
    <%= link "Choose a default image in the Gallery", to: admin_vendor_image_path(@conn, :index, @vendor.id), class: "text-italic" %>
    <% end %>
  </li>

  <li>
    <strong>Products</strong>
    <%= link "Go to products", to: admin_vendor_product_path(@conn, :index, @vendor) %>
  </li>

  <li>
    <strong>Gallery</strong>
    <%= link "Go to Gallery", to: admin_vendor_image_path(@conn, :index, @vendor) %>
  </li>

  <li>
    <strong>Slug:</strong>
    <code><%= @vendor.slug %></code>
  </li>

</ul>
