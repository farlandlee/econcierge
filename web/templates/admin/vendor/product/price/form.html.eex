<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below:</p>
      <ul>
        <%= for {attr, message} <- format_form_errors(@changeset) do %>
          <li><%= attr %> <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :amount, "Amount", class: "control-label" %>
    <div class="input-group">
      <span class="input-group-addon">$</span>
      <%= text_input f, :amount, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label f, :people_count, "Number of People", class: "control-label" %>
    <%= number_input f, :people_count, class: "form-control", min: 0 %>
  </div>

  <div class="form-group">
    <%= label f, :name, "Name", class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :description, "Description", class: "control-label" %>
    <%= text_input f, :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
    <%= link "Cancel", to: @back, class: "btn btn-default" %>
  </div>
<% end %>
