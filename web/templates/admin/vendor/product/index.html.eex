<%= link "Â« Back to #{@vendor.name}", to: admin_vendor_path(@conn, :show, @vendor.id) %>

<%= link to: admin_vendor_product_path(@conn, :new, @vendor), class: "btn-sm btn-success new-button" do %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Product
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Activity</th>
      <th>Description</th>

      <th>Go to&hellip;</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for product <- @products do %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.activity.name %></td>
      <td><%= product.description %></td>

      <td><%= link "Start times", to: admin_vendor_product_start_time_path(@conn, :index, @vendor, product), class: "btn btn-default btn-xs" %>
      <td class="text-right">
        <%= link "Show", to: admin_vendor_product_path(@conn, :show, @vendor, product), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: admin_vendor_product_path(@conn, :edit, @vendor, product), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: admin_vendor_product_path(@conn, :delete, @vendor, product), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
