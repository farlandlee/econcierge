<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
  <div class="alert alert-danger">
    <p>Oops, something went wrong! Please check the errors below:</p>
  </div>
  <% end %>

  <div class="form-group">
    <%= label :season_id, "Season", class: "control-label" %>
    <%= select f, :season_id, Enum.map(@seasons, &{season_text(&1), &1.id}), class: "form-control chosen-select" %>
    <%= error_tag f, :season_id %>
  </div>

  <div class="form-group">
    <%= label f, :starts_at_time, "Time", class: "control-label" %>
    <%= time_select f, :starts_at_time, class: "form-control" %>
    <%= error_tag f, :starts_at_time %>
  </div>

  <div class="form-group row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">Weekdays</div>
        <div class="panel-body">
          <%= checkboxes(f, :weekdays) %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">Weekend</div>
        <div class="panel-body">
          <%= checkboxes(f, :weekend) %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
    <%= link "Cancel", to: @back, class: "btn btn-default" %>
  </div>
<% end %>
