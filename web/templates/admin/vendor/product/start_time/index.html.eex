<%= link "Â« Back to #{@product.name}", to: admin_vendor_product_path(@conn, :show, @vendor, @product) %>

<table class="table">
  <thead>
    <tr>
      <th>Start Time</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for start_time <- @start_times do %>
    <tr>
      <td><%= start_time.starts_at_time %></td>

      <td class="text-right">
        <%= link to: admin_vendor_product_start_time_path(@conn, :delete, @vendor, @product, start_time), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
        <% end %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<hr>

<h4>
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
  Add Start Time
</h4>
<%= form_for @changeset, admin_vendor_product_start_time_path(@conn, :create, @vendor, @product), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below:</p>
      <ul>
        <%= for {attr, message} <- f.errors do %>
          <li><%= humanize(attr) %> <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :starts_at_time, "Starts at time", class: "control-label" %>
    <%= time_select f, :starts_at_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "Add", class: "btn btn-primary" %>
  </div>
<% end %>
