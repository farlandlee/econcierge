<%= link "Â« Back to #{@vendor.name}'s Products", to: admin_vendor_product_path(@conn, :index, @vendor) %>

<%= link to: admin_vendor_product_path(@conn, :edit, @vendor, @product), class: "btn-sm btn-primary new-button" do %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit Product
<% end %>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @product.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @product.description %>
  </li>

  <li>
    <strong>Activity:</strong>
    <%= @product.activity.name %>
  </li>

  <li>
    <strong>Categories</strong>
    <ul>
      <%= for ac <- @product.activity_categories do %>
      <li>
        <%= ac.category.name %>
      </li>
      <% end %>
    </ul>
  </li>

  <li>
    <strong><%= link "Start Times", to: admin_vendor_product_start_time_path(@conn, :index, @vendor, @product) %></strong>
    <ul>
      <%= for time <- @product.start_times do %>
      <li><%= time.starts_at_time %></li>
      <% end %>
    </ul>
  </li>
  
  <li>
    <strong>Published:</strong>
    <%= check_icon @product.published %>
  </li>

  <li>
    <strong><%= link "Prices", to: admin_vendor_product_price_path(@conn, :index, @vendor, @product) %></strong>
    <ul>
      <%= for price <- @product.prices do %>
      <li>
        $<%= price.amount %>
        <%= if price.id == @product.default_price_id do %><em>(Default)</em><% end %>
      </li>
      <% end %>
    </ul>
  </li>

</ul>
