<%= link "Â« Back to Products", to: admin_vendor_product_path(@conn, :index, @vendor) %>

<%= link to: admin_vendor_product_path(@conn, :edit, @vendor, @product), class: "btn-sm btn-primary new-button" do %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit Product
<% end %>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @product.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @product.description %>
  </li>

  <li>
    <strong>Activity:</strong>
    <%= @product.activity.name %>
  </li>

  <li>
    <strong><%= @product.activity.name %> Categories</strong>
    <ul>
      <%= for ac <- @product.activity_categories do %>
      <li>
        <%= ac.category.name %>
      </li>
      <% end %>
    </ul>
  </li>

</ul>
