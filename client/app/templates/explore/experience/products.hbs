<div class="experience-middle">
  <div class="row product-count">
    <div class="column small-12 medium-10 large-11">
      <p>Explore <span>{{products.length}}</span> {{if (gt products.length 1) 'products' 'product'}} under "{{experienceName}}"</p>
    </div>
  </div>
  <div class="row align-left products">
    {{#each products as |product|}}
    <div class="columns small-12 medium-6 large-4">
      {{product-card product=product}}
    </div>
    {{else}}
      No products for this date.
      Date switcher coming soon!
    {{/each}}
  </div>
</div>
{{outlet}}
