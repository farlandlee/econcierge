{{#foundation-modal onClose=(route-action "goToProducts") as |close|}}
  <section class="row column">
      <h3>{{product.name}}</h3>
  </section>
  {{#if product.images}}
  {{foundation-orbit images=product.images}}
  {{/if}}
  <section class="row align-right">
    <div class="columns small-12 medium-6">
      {{#if showVendor}}
      <h4 class="subheader">
        Vendor
      </h4>
      <p>{{product.vendor.name}}</p>
      {{#unless product.pickup}}
      <p class="meeting-address">
        {{#with product.meetingLocation as |loc|}}
        {{loc.address1}}{{#if loc.address2}} , {{loc.address2}}{{/if}}
        <br>
        {{loc.city}}, {{loc.state}} {{loc.zip}}
        {{/with}}
      </p>
      {{/unless}}
      {{else}}
      <h4 class="subheader">
        Experience
      </h4>
      <p>{{product.experience.name}}</p>
      {{/if}}
    </div>
    <div class="columns small-12 medium-6">
      <div class="row">
        {{product-icons product=product}}
      </div>
    </div>
  </section>
  {{#if showVendor}}
  <section class="row">
    <div class="columns">
      <h4 class="subheader">
        Experience
      </h4>
      <p>{{product.experience.name}}</p>
    </div>
  </section>
  {{/if}}
  <section class="row">
    <div class="columns">
      <h4 class="subheader">
        Description
      </h4>
      <p>{{description}}</p>
    </div>
  </section>
  <section class="row">
    <div class="columns">
      <h4 class="subheader">
        Cancellation Policy
      </h4>
      <p>100% refund up to {{product.vendor.cancellationPolicyDays}} days before the trip.</p>
    </div>
  </section>
  {{booking-form product=product date=date
    cancel=(action close)
    submit=(route-action "book" product)}}
{{/foundation-modal}}
