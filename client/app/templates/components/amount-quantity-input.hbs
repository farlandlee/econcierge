{{#unless hasBlock}}
<label>{{price.name}}</label>
{{/unless}}
<div class="input-group body-count">
  <div onclick={{action "decrement"}} class="input-group-button">
    <span class="fa fa-minus-square"></span>
  </div>

  {{input value=quantity type="number" class="input-group-field"}}

  <div onclick={{action "increment"}} class="input-group-button">
    <span class="fa fa-plus-square"></span>
  </div>
</div>
{{#if showAmountLabel}}
<div class="amount-label text-center">
  ${{amount.amount}} per
  {{#if (gt price.people_count 1)}}
    {{price.people_count}} people
  {{else}}
    person
  {{/if}}
</div>
{{/if}}
{{yield cost amount}}
