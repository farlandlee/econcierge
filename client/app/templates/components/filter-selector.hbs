<h4 class="filter-header">
  {{title}}
</h4>
<ul class="filter-list">
  <li class="filter-option">
    <button onClick={{action attrs.clear}}>
      <span class="fa-stack">
        {{#if (eq selectedValues.length 0)}}
        <i class="fa fa-check fa-stack-1x checkmark"></i>
        {{/if}}
        <i class="fa fa-square-o fa-lg checkbox"></i>
      </span>
      <span class="filter-label">
        All {{title}}s
      </span>
    </button>
  </li>
  {{#each displayableOptions key="value" as |option|}}
  <li class="filter-option">
    <button onClick={{action "select" option.value}}>
      <span class="fa-stack">
        {{#if option.selected}}
        <i class="fa fa-check fa-stack-1x checkmark"></i>
        {{/if}}
        <i class="fa fa-square-o fa-lg checkbox"></i>
      </span>
      <span class="filter-label">
        {{option.label}}
      </span>
    </button>
  </li>
  {{/each}}
</ul>
