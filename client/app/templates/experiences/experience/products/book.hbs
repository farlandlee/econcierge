{{#foundation-modal onClose=(route-action "goToProducts") as |close|}}
  <section class="row column">
      <h3>{{product.name}}</h3>
  </section>
  <section class="row">
    <div class="columns small-12 medium-6">
      <h4 class="subheader">
        Vendor
      </h4>
      <p>{{product.vendor.name}}</p>
    </div>
    <div class="columns small-12 medium-6">
      <div class="row">
        <div class="column small-4">
          <p class="duration fi flaticon-clock">{{duration}}</p>
        </div>
        <div class="column small-4">
          <p class="age-restriction fi flaticon-people">6+ Years</p>
        </div>
        <div class="column small-4">
          <p class="location fi flaticon-location">{{if product.pickup "Pick Up" "Meet At Location"}}</p>
        </div>
      </div>
    </div>
  </section>
  <section class="row">
    <div class="columns">
      <h4 class="subheader">
        Experience
      </h4>
      <p>{{product.experience}}</p>
    </div>
  </section>
  <section class="row">
    <div class="columns">
      <h4 class="subheader">
        Description
      </h4>
      <p>{{product.description}}</p>
    </div>
  </section>
  <section class="row">
    <div class="columns">
      <h4 class="subheader">
        Cancellation Policy
      </h4>
      <p>100% refund up to 6 days before the trip.</p>
    </div>
  </section>
  <section class="trip-details">
    <div class="row align-center">
      <div class="columns">
        <h3 class="text-center">Enter Your Trip Details</h3>
      </div>
    </div>
    <div class="row align-spaced body-count">
      <div class="columns shrink">
        <label>Adult</label>
        <div class="input-group">
          <span class="input-group-button"><span class="fa fa-minus-square"></span></span>
          <input class="input-group-field" type="number" value="0">
          <span class="input-group-button"><span class="fa fa-plus-square"></span></span>
        </div>
      </div>
      <div class="columns shrink">
        <label>Child</label>
        <div class="input-group">
          <span class="input-group-button"><span class="fa fa-minus-square"></span></span>
          <input class="input-group-field" type="number" value="0">
          <span class="input-group-button"><span class="fa fa-plus-square"></span></span>
        </div>
      </div>
    </div>
    <div class="row align-spaced date-selection">
      <div class="columns shrink">
        <label>Time</label>
        <div class="datepicker" ></div>
      </div>
    </div>
  </section>
  <section class="row align-justify align-bottom booking-footer ">
    <div class="column small-12 medium-3 small-order-2 medium-order-1 text-center medium-text-left">
      <button type="button" class="button hollow" onclick={{action close}}>Back</button>
    </div>
    <div class="column small-12 medium-4 small-order-1 medium-order-2 text-center medium-text-right">
      <div class="book-total">$0</div>
      <div class="book-total-label">Total</div>
    </div>
    <div class="column small-12 medium-5 small-order-3 text-center medium-text-right">
      <button type="button" class="button primary large">Add to Cart</button>
    </div>
  </section>
{{/foundation-modal}}
